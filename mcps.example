{
  "mcpServers": {
    "GitHub": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "TU_TOKEN_AQUI"
      },
      "fromGalleryId": "modelcontextprotocol.servers_github"
    },

    "shell": {
      "command": "python",
      "args": ["-m", "mcp_server_shell"],
      "disabled": true
    },

    "Desktop Commander": {
      "command": "npx desktop-commander",
      "args": [],
      "env": {},
      "fromGalleryId": "wonderwhy-er.ClaudeComputerCommander"
    },

    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem"],
      "options": {
        "roots": [
          "./templates",
          "./assets",
          "./output"
        ]
      },
      "timeout": 30000
    },

    "fetch": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"],
      "options": {
        "allowedDomains": [
          "commons.wikimedia.org",
          "upload.wikimedia.org",
          "openclipart.org",
          "pixabay.com",
          "rawpixel.com",
          "metmuseum.org",
          "rijksmuseum.nl",
          "clevelandart.org"
        ],
        "userAgent": "CateKids-Agent/1.0 (+contacto: cate@parroquia.tld)",
        "maxContentLength": 5242880
      },
      "timeout": 30000
    },

    "image_gen": {
      "command": "node",
      "args": ["./servers/image-gen-wrapper.js"],
      "env": {
        "IMAGE_GEN_ENDPOINT": "http://localhost:8080/generate",
        "IMAGE_EDIT_ENDPOINT": "http://localhost:8080/edit",
        "IMAGE_GEN_API_KEY": "REEMPLAZA_CON_TU_CLAVE",
        "SIZE_DEFAULT": "1200x1600",
        "BACKGROUND": "transparent"
      },
      "timeout": 120000
    },

    "exporter": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-shell"],
      "options": {
        "commands": {
          "html_to_pdf": {
            "cmd": "wkhtmltopdf",
            "args": ["--enable-local-file-access", "{{input}}", "{{output}}"]
          },
          "html_to_docx": {
            "cmd": "pandoc",
            "args": ["{{input}}", "-o", "{{output}}"]
          }
        },
        "workingDirectory": "."
      },
      "timeout": 120000
    },

    "image_utils": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-shell"],
      "options": {
        "commands": {
          "normalize": {
            "cmd": "magick",
            "args": [
              "{{input}}",
              "-resize", "1200x1600^",
              "-gravity", "center",
              "-extent", "1200x1600",
              "-colorspace", "sRGB",
              "{{output}}"
            ]
          }
        },
        "workingDirectory": "."
      },
      "timeout": 60000
    }
  }
}